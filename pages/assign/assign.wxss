/* pages/assign/assign.wxss */
.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.head image {
  width: 168rpx;
  height: 168rpx;
}

.title {
  font-size: 44rpx;
  margin: 40rpx 0;
}

.subtitle {
  font-size: 28rpx;
  color: #666E7A;
}

.subtitle span:nth-child(3) {
  color: #FD7753;
}

.personal {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.personal > span {
  margin-bottom: 40rpx;
}

.personal .upload {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 200rpx;
  border-radius: 4px;
  background: rgba(255, 87, 41, 0.1);
  border: 1px dashed rgba(253, 119, 83, 1);
  color: rgba(253, 119, 83, 1);
}

.upload span {
  margin-bottom: 20rpx;
}

.textarea {
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  height: 400rpx;
  border: 1px dashed #000;
}

.submit {
  margin-top: 40rpx;
  width: 100%;
  background-color: #ec7f5d;
  color: #fff;
}

.action {
  height: 500rpx;
}

.action-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.action-container image {
  margin-bottom: 50rpx;
  width: 128rpx;
  height: 128rpx;
}