/* pages/detail/detail.wxss */
.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.head image {
  width: 168rpx;
  height: 168rpx;
}

.title {
  margin: 40rpx 0;
}

.subtitle {
  font-size: 28rpx;
  color: #666E7A;
}

.subtitle span:nth-child(3) {
  color: #FD7753;
}

.head-2 {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100vw;
  margin-top: 40rpx;
}

.head-item {
  display: flex;
  align-items: center;
}

.head-2 image {
  width: 72rpx;
  height: 72rpx;
  margin-right: 30rpx;
}

.body {
  margin-top: 50rpx;
  width: 100%;
}

.card-head {
  font-size: 28rpx;
  margin: 20rpx 0;
}

.card-body {
  font-size: 24rpx;
  color: #666E7A;
  display: flex;
  flex-direction: column;
}

.card-body span {
  margin-bottom: 30rpx;
}

.foot {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.foot .star {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 96rpx;
  height: 96rpx;
  border: 1px solid rgba(238, 238, 238, 1);
  margin-right: 100rpx;
}

.foot image {
  width: 40rpx;
  height: 40rpx;
}

.foot button {
  background-color: #ec7f5d;
  color: #fff;
  width: 400rpx;
  margin: 0;
}