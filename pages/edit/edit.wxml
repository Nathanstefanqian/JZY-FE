<!-- pages/edit/edit.wxml -->
<back></back>
<view class="container">
  <view class="head">
    <image src="../../assets/avatar.svg" />
    <span>上传头像</span>
  </view>
  <view class="divider"></view>
  <view class="body">
    <view class="box">
      <span>姓名</span>
      <input type="text" placeholder="请输入姓名" bindinput="inputHandler" />
    </view>
    <view class="box">
      <span>年龄</span>
      <input type="text" placeholder="请输入年龄" bindinput="inputHandler" />
    </view>
    <view class="box">
      <span>性别</span>
      <input type="text" placeholder="请选择性别" bindtap="sexHandler" />
    </view>
    <view class="box">
      <span>学号/教职工号</span>
      <input type="text" placeholder="请输入内容" bindinput="inputHandler" />
    </view>
    <view class="box">
      <span>学院</span>
      <input type="text" placeholder="请选择学院" bindtap="schoolHandler" />
    </view>
    <view class="box">
      <span>专业</span>
      <input type="text" placeholder="请输入专业" bindinput="inputHandler" />
    </view>
    <view class="box">
      <span>手机号</span>
      <input type="text" placeholder="请输入手机号" bindinput="inputHandler" />
    </view>
  </view>
  <button class="submit">提交审核</button>
</view>
<van-action-sheet title="{{ title }}" custom-class="action" show="{{ show }}" actions="{{ actions }}" bind:close="onClose" />