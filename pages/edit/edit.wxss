/* pages/edit/edit.wxss */
.head {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.head image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 50rpx;
}

.body {
  width: 100%;
}

.box {
  margin: 40rpx 0;
}

.box input {
  margin-top: 20rpx;
  border: 1px solid rgba(238, 238, 238, 1);
  padding: 5rpx 10rpx;
  height: 96rpx;
}
.getUser {
  display: flex;
  align-items: center;
}
.getUser button {
  margin-left: auto;
  margin-right: 0;
  font-size: 20rpx;
  color: #FD7753;
}

.action {
  max-height: 300rpx;
}

.submit {
  width: 100%;
  margin-bottom: 50rpx;
}