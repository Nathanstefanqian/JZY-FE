.container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 40rpx;
}

.search {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  margin: 0 0 60rpx 0;
  background-color: #fff;
  border-radius: 82px;
  box-shadow: 1px 3px 12px 0px #E5E5E5;
}

.search input {
  margin-left: 40rpx;
}

.search image {
  width: 78rpx;
  margin-right: 40rpx;
}

.item {
  box-sizing: border-box;
  height: 170rpx;
  box-shadow: 1px 3px 12px 0px #E5E5E5;
  border-radius: 25rpx;
  padding: 20rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  margin: 5rpx 0 5rpx 0;
}

.job-row1 {
  font-size: 14px;
  font-weight: 800;
  color: #EABD67;
}

.job-row2 {
  font-size: 14px;
  font-weight: 200;
  color: #857F7F;
}

.job-location {
  display: flex;
  justify-content: center;
  background-color: #EABD67;
  border-radius: 10rpx;
  color: #fff;
  font-size: 14px;
  padding: 0 10rpx;
}